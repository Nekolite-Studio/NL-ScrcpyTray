{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build-csharp",
      "command": "dotnet",
      "type": "process",
      "args": [
        "build",
        "${workspaceFolder}/src/src.csproj",
        "/property:GenerateFullPaths=true",
        "/consoleloggerparameters:NoSummary"
      ],
      "problemMatcher": "$msCompile",
      "group": "build"
    },
    {
      "label": "start-vite",
      "type": "npm",
      "script": "dev",
      "path": "frontend",
      "isBackground": true,
      "problemMatcher": {
        "owner": "typescript",
        "pattern": {
          "regexp": "^([^\\s].*)\\((\\d+|\\d+,\\d+|\\d+,\\d+,\\d+,\\d+)\\):\\s+(error|warning|info)\\s+(TS\\d+)\\s*:\\s*(.*)$",
          "file": 1,
          "location": 2,
          "severity": 3,
          "code": 4,
          "message": 5
        },
        "background": {
          "activeOnStart": true,
          "beginsPattern": "^\\s*VITE\\s+v",
          "endsPattern": "^\\s*âžœ\\s+Local:\\s+http"
        }
      },
      "presentation": {
        "group": "build",
        "reveal": "never"
      }
    },
    {
      "label": "dev-build",
      "dependsOn": ["start-vite", "build-csharp"],
      "dependsOrder": "parallel",
      "problemMatcher": []
    }
  ]
}